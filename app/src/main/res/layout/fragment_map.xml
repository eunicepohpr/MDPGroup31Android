<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New.MapFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="64"
            android:orientation="horizontal"
            android:weightSum="68">

            <!--map-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="42"
                android:orientation="vertical"
                android:padding="20dp">

                <com.example.mdpandroid.New.MazeView2
                    android:id="@+id/mazeView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:layout_weight="26"
                android:padding="2dp">

                <RelativeLayout
                    android:id="@+id/topRL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/tvRS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/robot_small"
                        android:text="@string/MapRobotStatus"
                        android:textAppearance="@style/MapStatus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tvRS"
                        android:text="idle"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/topRL2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topRL1"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/tvES"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/time_small"
                        android:text="@string/MapExpStatus"
                        android:textAppearance="@style/MapStatus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tvES"
                        android:text="00:00"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/topRL3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topRL2"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/tvFPWP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/MapFPWPStatus"
                        android:textAppearance="@style/MapStatus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tvFPWP"
                        android:text="(0,0)"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/topRL4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topRL3"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/tvRStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/MapRSStatus"
                        android:textAppearance="@style/MapStatus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tvRStart"
                        android:text="(0,0)"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/topRL5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topRL4"
                    android:layout_margin="5dp">

                    <Switch
                        android:id="@+id/switchPlotRP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:text="@string/SwitchPlotRP" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/topRL6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topRL5"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/tvRO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/MapRobotOrien" />

                    <Spinner
                        android:id="@+id/spinnerROrien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tvRO" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="36"
            android:background="@color/Mapbtmbg"
            android:orientation="horizontal"
            android:weightSum="32">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="19"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/btmLeftRL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp">

                    <Button
                        android:id="@+id/btnExplore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:text="Explore" />

                    <Button
                        android:id="@+id/btnFP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_toEndOf="@id/btnExplore"
                        android:text="Fastest Path" />

                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_toEndOf="@id/btnFP"
                        android:text="Reset" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btmLeftRL2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btmLeftRL1"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp">

                    <Button
                        android:id="@+id/btnCali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:text="Calibrate" />

                    <Button
                        android:id="@+id/btnUpdateMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_toEndOf="@id/btnCali"
                        android:text="@string/BtnUpM" />

                    <Switch
                        android:id="@+id/switchAutoUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="1dp"
                        android:layout_toEndOf="@id/btnUpdateMap"
                        android:text="@string/SwitchAU" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btmLeftRL3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btmLeftRL2"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp">

                    <Button
                        android:id="@+id/btnSendWP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/BtnWP" />

                    <Button
                        android:id="@+id/btnSendRP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/btnSendWP"
                        android:text="@string/BtnRP" />

                </RelativeLayout>

            </RelativeLayout>

            <!--Controls-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:padding="5dp">

                <Switch
                    android:id="@+id/switchTilt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/SwitchTilt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/switchTilt"
                    android:layout_margin="1dp">

                    <Button
                        android:id="@+id/btnUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:alpha="0"
                        android:text="@string/BtnUp" />

                    <Button
                        android:id="@+id/btnDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:alpha="0"
                        android:text="@string/BtnDown" />

                    <Button
                        android:id="@+id/btnLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:alpha="0"
                        android:text="@string/BtnLeft" />

                    <Button
                        android:id="@+id/btnRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:alpha="0"
                        android:text="@string/BtnRight" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/dpad" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

